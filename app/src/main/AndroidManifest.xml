<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.empireofchaos.wine_o" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DataCollection"
            android:label="@string/title_activity_questionnaire"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.empireofchaos.wine_o.MainActivity" />
        </activity>
        <activity
            android:name=".RecommendWine"
            android:label="@string/title_activity_recommend_wine"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.empireofchaos.wine_o.MainActivity" />
        </activity>
        <activity
            android:name=".TrendingWine"
            android:label="@string/title_activity_trending_wine"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.empireofchaos.wine_o.MainActivity" />
        </activity>
        <activity
            android:name=".DrinkingHistory"
            android:label="@string/title_activity_drinking_history"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.empireofchaos.wine_o.MainActivity" />
        </activity>
    </application>

</manifest>
